AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: 'Bref Default PHP 7.2 Layer Test'

Globals:
    Function:
        Timeout: 10
        MemorySize: 1024

Resources:
    TestFunction:
        Type: AWS::Serverless::Function
        Properties:
            FunctionName: 'bref-default-php-7_2'
            Description: 'Bref Default PHP 7.2 Layer Test'
            CodeUri:
            Handler: test.handler
            Runtime: provided
            Layers:
                - 'REPLACETHISARN'
            Environment:
                Variables:
                    APP_ENV: prod
                    APP_DEBUG: '0'
                    APP_SECRET: '67d829bf61dc5f87a73fd814e2c9f629'
            Events:
                HttpRoot:
                    Type: Api
                    Properties:
                        Path: /
                        Method: ANY
                HttpSubPaths:
                    Type: Api
                    Properties:
                        Path: /{proxy+}
                        Method: ANY

Outputs:
    TestApi:
        Description: "API Gateway endpoint URL for Prod stage test"
        Value: !Sub "https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/"
    TestFunction:
        Description: "Bref Default PHP 7.2 Layer Test Function ARN"
        Value: !GetAtt TestFunction.Arn
